<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <description>该spring 配置文件，主要维护系统框架的bean信息</description>

  <!-- com.kindustry.framework.jdbc.core.JdbcTemplate   -->
  <bean id="jdbcTemplate" class="com.kindustry.framework.jdbc.core.JdbcTemplate" abstract="true" init-method="getInstance" />

  <!-- com.kindustry.framework.jdbc.template.MySQLTemplate   -->
  <bean id="MySQLTemplate" class="com.kindustry.framework.jdbc.template.MySQLTemplate" parent="jdbcTemplate" lazy-init="false" />

  <bean id="basicDao" class="com.kindustry.framework.dao.imp.BasicDaoImp" lazy-init="false">
    <property name="jdbcTemplate">
      <ref bean="MySQLTemplate" />
    </property>
  </bean>



  <bean id="basicService" class="com.kindustry.framework.service.imp.BasicServiceImp" lazy-init="true">
    <property name="basicDao">
      <ref bean="basicDao" />
    </property>
  </bean>

  <bean id="ehCache" class="com.kindustry.framework.cache.EhCacheImpl" lazy-init="true" />


  <bean id="cacheManagerFactory" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
    <property name="configLocation" value="classpath:ehcache.xml" />
  </bean>

  <bean id="cacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager">
    <property name="cacheManager" ref="cacheManagerFactory" />
  </bean>



</beans>